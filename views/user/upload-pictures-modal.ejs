<div class="modal fade" id="upload-pictures-modal" tabindex="-1" role="dialog" aria-labelledby="upload-pictures-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add Pictures to Album</h4>
      </div>
      <div class="modal-body">
        <div role="form">
          <div class="form-group">
            <label for="imagesToUpload">Select your images for upload</label>
            <form id="fileUploadForm">
              <input type="file" id="imagesToUpload" accept="image/x-png, image/gif, image/jpeg" multiple>  
            </form>
            <p class="help-block">You can select multiple pictures by pressing Ctrl/Option</p>
          </div>
        </div>
        <div id="fileUploadProgressBar" style="display:none;">
          <strong id="currentUploadFileTitle">IMG_123.JPG</strong> <br>
          <div class="progress progress-striped active">
            <div class="progress-bar progress-bar-success"  role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 5%" id="fileUploadProgressBarValue">
            </div>
          </div>
          <span id="totalUploadedFilesCount">0</span> of <span id="totalSelectedFilesCount">0</span> files uploaded.
        </div>
        <p id="uploadImagesPreview"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="uploadPicturesButton">Start Uploading Images</button>
      </div>
    </div>
  </div>
</div>