<div class="modal fade" id="create-album-modal" tabindex="-1" role="dialog" aria-labelledby="create-album-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Create New Album</h4>
      </div>
      <div class="modal-body">
        <div role="form">
          <div class="form-group">
            <label for="newAlbumTitle">Album Title</label>
            <input type="text" class="form-control" id="newAlbumTitle" placeholder="Title for your new album">
          </div>
          <div class="form-group">
            <label for="newAlbumDescription">Album Description</label>
            <textarea class="form-control" id="newAlbumDescription" cols="10" rows="3"></textarea>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="createAlbumButton">Create &amp; Upload Images</button>
      </div>
    </div>
  </div>
</div>